
<div class="row">
    <div class="col-md-{% if article.displaySidebar == 0  %}12{% else  %}8{% endif %} article-content-left ">
        <div class="user-css-vignette">{{ article.content|BBcode }}</div>

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.demographics,
            'title':'settlement.demographics',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.government,
            'title':'settlement.government',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.defences,
            'title':'settlement.defences',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.industry,
            'title':'settlement.industry',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.infrastructure,
            'title':'settlement.infrastructure',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.district,
            'title':'settlement.district.name',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.assets,
            'title':'settlement.assets',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.guilds,
            'title':'settlement.guilds_and_factions',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.history,
            'title':'settlement.history',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.pointOfInterest,
            'title':'settlement.pointOfInterest.name',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.tourism,
            'title':'location.tourism',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.architecture,
            'title':'settlement.architecture',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.geography,
            'title':'settlement.geography',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.climate,
            'title':'settlement.climate',
            'locale': locale
        } only %}

        {% include 'PresentationBundle:Helpers:section.html.twig' with {
            'value': article.naturalresources,
            'title':'settlement.natural_resources',
            'locale': locale
        } only %}

        {% if article.footnotes %}<div class="user-css article-footnotes">{{ article.footnotes|BBcode }}</div>{% endif %}
    </div>
    {% if article.displaySidebar == 1   %}
        <div class="col-md-4 article-content-right">
            {% if  article.world.globalAnnouncement|length > 0 %}
                <div class="world-global-annnouncement">
                    {{ article.world.globalAnnouncement|BBcode }}
                </div>
            {% endif %}
            {% if article.sidebarcontent|length > 0 %}
                <div class="m-b-20">{{ article.sidebarcontent|BBcode  }}</div>
            {% endif %}
            {{ render( controller('PresentationBundle:Default:maplist', {'article': article, 'template':'location'  }) ) }}

            <div class="panel panel-default card mb-3">
                <div class="panel-body card-body">
                    {{ article.sidepanelcontenttop|BBcode }}
                    {% if article.ruined|length > 0 %}
                        <p>
                            <strong class="text-danger">{{ 'settlement.ruined_settlement'|trans({},'presentation') }}</strong>
                            <br />
                            {{ article.ruined|BBcode }}
                        </p>
                    {% endif %}
                    <div>
                        {% include 'PresentationBundle:Helpers:value.html.twig' with {
                            'value': article.constructed,
                            'title':'settlement.founding',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {
                            'list': article.founders,
                            'title': 'settlement.founders',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:value.html.twig' with {
                            'value': article.alternativename,
                            'title':'settlement.alternative_names',
                            'locale': locale
                        } only %}

                        {% if article.type  %}
                            {% include 'PresentationBundle:Helpers:value.html.twig' with {
                                'value': article.type.name,
                                'title':'settlement.type',
                                'locale': locale
                            } only %}
                        {% endif %}

                        {% include 'PresentationBundle:Helpers:value.html.twig' with {
                            'value': article.population,
                            'title':'settlement.population',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {
                            'list': article.ethnicities,
                            'title':'ethnicity.locations.reflexive.name',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:value.html.twig' with {
                            'value': article.demonym,
                            'title':'settlement.inhabitant_demonym',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relation.html.twig' with {
                            'value': article.parent,
                            'title':'settlement.location_under',
                            'article': article,
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {
                            'list': article.children,
                            'title': 'settlement.included_locations',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relation.html.twig' with {
                            'value': article.person,
                            'title':'settlement.owner_ruler',
                            'article': article,'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {
                            'list': article.additionalRulers,
                            'title':'location.additionalRulers.name',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relation.html.twig' with {
                            'value': article.rank,
                            'title':'location.rank',
                            'article': article,'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relation.html.twig' with {
                            'value': article.organization,
                            'title':'settlement.owning_organization',
                            'article': article,'locale': locale
                        } only %}
                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {
                            'list': article.rituals,
                            'title': 'ritual.related_location.reflexive.name',
                            'locale': locale
                        } only %}
                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {
                            'list': article.importantTraditions,
                            'title': 'ritual.important_locations.reflexive.name',
                            'locale': locale
                        } only %}
                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {'list': article.contenders, 'title':'Contested By'} only %}

                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {
                            'list': article.people,
                            'title': 'settlement.characters_in_location',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {
                            'list': article.vehiclesPresent,
                            'title':'vehicle.location.reflexive.name',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {'list': article.professions, 'title':'Related Professions'} only %}

                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {
                            'list': article.reportprimarylocations,
                            'title': 'settlement.related_reports_primary',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {
                            'list': article.reportsecondarylocations,
                            'title': 'settlement.related_reports_secondary',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {
                            'list': article.plots,
                            'title': 'article.related_plots',
                            'locale': locale
                        } only %}

                        {% include 'PresentationBundle:Helpers:relationlist.html.twig' with {'list': article.materials, 'title':'Related Materials'} only %}
                    </div>
                    {{ article.sidepanelcontent|BBcode }}
                </div>
            </div>
            {{ article.sidebarcontentbottom|BBcode }}
            <div class="world-global-article-additional">
                {{ article.world.globalSidebarFooter|BBcode }}
            </div>
        </div>
    {% endif %}
</div>