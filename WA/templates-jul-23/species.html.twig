            <div class="">
                {% include 'PresentationBundle:Helpers:section.html.twig' with {
                    'value': article.anatomy,
                    'title':'species.anatomy',
                    'locale': locale
                } only %}

                {% include 'PresentationBundle:Helpers:section.html.twig' with {
                    'value': article.traits,
                    'title':'species.biological_traits',
                    'locale': locale
                } only %}

