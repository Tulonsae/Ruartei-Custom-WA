                    'locale': locale
                } only %}

                {% include 'PresentationBundle:Helpers:section.html.twig' with {
                    'value': article.symbiotic,
                    'title':'species.symbiotic_and_parasitic_organisms',
                    'locale': locale
                } only %}
            </div>
        {% endif %}
        {% if
            article.namingTraditions|length > 0 or
            article.majorOrganizations|length > 0  or
            article.beautyIdeals|length > 0 or
            article.genderIdeals|length > 0 or
            article.courtshipIdeals|length > 0  or
            article.relationshipsIdeals|length > 0 or
            article.technologicalLevel|length > 0 or
            article.languages|length > 0 or
            article.etiquette|length > 0 or
            article.dresscode|length > 0  or
            article.culture|length > 0  or
            article.customs|length > 0  or
            article.taboos|length > 0 or
            article.mythsAndLegends|length > 0 or
            article.historicalFigures|length > 0 or
            article.history|length > 0 or
            article.interspeciesRelations|length > 0
         %}
            <h2>{{ 'species.civilization_and_culture'|trans({},'presentation') }}</h2>
            <div class="">

                {% include 'PresentationBundle:Helpers:section.html.twig' with {
                    'value': article.namingTraditions,
                    'title':'species.naming_traditions',
                    'locale': locale
                } only %}

                {% include 'PresentationBundle:Helpers:section.html.twig' with {
                    'value': article.majorOrganizations,
                    'title':'species.major_organizations',
                    'locale': locale
                } only %}

                {% include 'PresentationBundle:Helpers:section.html.twig' with {
                    'value': article.beautyIdeals,
                    'title':'species.beauty_ideals',
                    'locale': locale
                } only %}

                {% include 'PresentationBundle:Helpers:section.html.twig' with {
                    'value': article.genderIdeals,
